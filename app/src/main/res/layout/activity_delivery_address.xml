<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash2">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/slogan_text"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/town_drop_delivery"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/slogan"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:ms_arrow_tint="@color/colorPrimary"
        app:ms_text_color="@color/colorPrimary" />

    <EditText
        android:id="@+id/quarter_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/town_drop_delivery"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:inputType="textCapWords"
        android:drawableLeft="@drawable/ic_person_green"
        android:drawablePadding="10dp"
        android:hint="Enter Quarter"
        android:maxLines="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quarter_text"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/delivery_address_button_bg"
        android:onClick="SaveDeliveryAddress"
        android:padding="20dp"
        android:text="SAVE"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>
