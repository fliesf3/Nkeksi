<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.firefly.nkeksi.user.CartDetail">

    <include
        android:id="@+id/tool"
        layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lay1"
        android:layout_below="@+id/tool" />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#60ffffff"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/cart_total_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_getstarted_primary"
            android:padding="10dp"
            android:text="Total: 2000"
            android:textColor="#fff" />

        <Button
            android:id="@+id/cart_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round_getstarted_primary"
            android:text="ORDER"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>
